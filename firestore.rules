rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserRole() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid))
             ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role
             : null;
    }

    function getUserPermissions() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions != null
             ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions
             : [];
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }

    function isRecruiter() {
      // Recruiter role (English) OR recruteur role (French) OR admin role grants access
      return isAuthenticated() && 
             (getUserRole() == 'recruiter' || getUserRole() == 'recruteur' || getUserRole() == 'admin');
    }

    function isReader() {
      // Reader, recruiter/recruteur, or admin roles can read cvDatabase
      return isAuthenticated() && 
             (getUserRole() == 'reader' || getUserRole() == 'lecteur' || 
              getUserRole() == 'recruiter' || getUserRole() == 'recruteur' || 
              getUserRole() == 'admin');
    }

    // Users collection - Users can create/update their own document, admin can do all
    match /users/{userId} {
      // Allow read if authenticated (for getUserRole function)
      allow read: if isAuthenticated();
      // Allow create if user is creating their own document (by UID match)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Allow update if user is updating their own document OR if admin
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      // Only admin can delete
      allow delete: if isAdmin();
    }

    // Site settings - Admin only
    match /settings/{document=**} {
      allow read: if true; // Public read for site display
      allow write: if isAdmin();
    }

    // Site Data - Full site data storage (admin only for write, public read for main document)
    match /siteData/{documentId} {
      // Allow public read for main document (for public site display), authenticated read for others
      allow read: if documentId == 'main' || isAuthenticated();
      allow write: if isAdmin(); // Only admin can write
    }

    // Services - Admin can write, everyone can read
    match /services/{serviceId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Jobs - Admin and Recruiter can write, everyone can read
    match /jobs/{jobId} {
      allow read: if true;
      allow create, update, delete: if isRecruiter();
    }

    // CV Database - Allow read for authenticated users with reader/recruiter/admin roles
    match /cvDatabase/{cvId} {
      // Allow read if user has reader/lecteur, recruiter/recruteur, or admin role
      allow read: if isReader();
      // Anyone can submit a CV
      allow create: if true;
      // Allow update/delete for recruiter/recruteur and admin
      allow update, delete: if isRecruiter();
    }

    // Contact Messages - Admin can read/write, anyone can create
    match /contactMessages/{messageId} {
      allow read: if isReader();
      allow create: if true; // Anyone can send a message
      allow update, delete: if isAdmin();
    }

    // Clients - Admin can write, everyone can read
    match /clients/{clientId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Testimonials - Admin can write, everyone can read
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Custom Pages - Admin can write, everyone can read
    match /customPages/{pageId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Hero Settings - Admin can write, everyone can read
    match /heroSettings/{documentId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // ISO & Media - Admin can write, everyone can read
    match /iso/{documentId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Theme - Admin can write, everyone can read
    match /theme/{documentId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Images - Admin can write, everyone can read
    match /images/{documentId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Consent Logs - Anyone can create, Admin can read
    match /consentLogs/{logId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if false;
    }

    // GDPR Requests - Anyone can create, Admin can read/update
    match /gdprRequests/{requestId} {
      allow read, update: if isAdmin();
      allow create: if true;
      allow delete: if false;
    }

    // Activity Log - Admin only
    match /activityLog/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }

    // Trash - Admin only
    match /trash/{trashId} {
      allow read, update, delete: if isAdmin();
      allow create: if isAuthenticated();
    }

    // Password Change Confirmations - Authenticated users can create and read/update their own
    match /passwordChangeConfirmations/{confirmationId} {
      // Allow create if authenticated (for requesting password change)
      allow create: if isAuthenticated();
      // Allow read if authenticated (users can read their own confirmations via query)
      allow read: if isAuthenticated();
      // Allow update if authenticated (for confirming password change)
      allow update: if isAuthenticated();
      // Only admin can delete
      allow delete: if isAdmin();
    }
  }
}
